    <div class="row">
    	<div class="col-xs-3">
			<h2>User info</h2>
			<!-- bookを書いたユーザ情報を表示するためcurrent_user→@userへ -->
			<%= render 'users/profile', user: @user %>



			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<!--renderでbookの_indexからもってくる -->
			<%= render 'books/index', books: @books %>
		</div>
	</div>
</div>

